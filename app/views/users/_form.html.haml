= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :provider
    = f.text_field :provider
  .field
    = f.label :uid
    = f.text_field :uid
  .field
    = f.label :role
    = f.number_field :role
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :prefs
    = f.text_area :prefs
  .field
    = f.label :facebook_id
    = f.text_field :facebook_id
  .field
    = f.label :street_address
    = f.text_field :street_address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zip
    = f.text_field :zip
  .field
    = f.label :phone_no
    = f.text_field :phone_no
  .actions
    = f.submit 'Save'
